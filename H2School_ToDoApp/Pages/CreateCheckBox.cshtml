@page "{ToDoID:int?}"
@model H2School_ToDoApp.Pages.CreateCheckBoxModel
@{
}

<h1>Create</h1>

<h4>CheckBox</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CheckBox.Title" class="control-label"></label>
                <input asp-for="CheckBox.Title" class="form-control" />
                <span asp-validation-for="CheckBox.Title" class="text-danger"></span>
                <label asp-for="CheckBox.Description" class="control-label"></label>
                <input asp-for="CheckBox.Description" class="form-control" />
                <span asp-validation-for="CheckBox.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ToDo.Id" />
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/SingleToDo">Back to To Do List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}